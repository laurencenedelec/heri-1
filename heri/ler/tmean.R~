meanc=function(X) {
X<-t((t(X)-colMeans(X)))-rowMeans(X)+mean(X)
return(X)}


dcov_m=function(X,Y) {
X<-t((t(X)-colMeans(X)))-rowMeans(X)+mean(X)
Y<-t(t(Y)-colMeans(Y))-rowMeans(Y)+mean(Y)
dcov2<- mean(X*Y)
if (dcov2<0) {dcov<- -sqrt(-dcov2)} else {dcov<-sqrt(dcov2)}
return(dcov)}

